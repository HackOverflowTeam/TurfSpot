              "host": ["{{base_url}}"],
              "path": ["api", "admin", "turfs", ":turfId", "approve"],
              "variable": [
                {
                  "key": "turfId",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    }
  ],
